<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    <div id="app">
        {{>slidebar}}
        <div id="main">
            {{>nav}}
            <div class="page-heading">
                <div class="page-title">
                    <div class="row">
                        <div class="col-12 col-md-6 order-md-1 order-last">
                            <h3>Thông tin chiến dịch</h3>
                            <p class="text-subtitle text-muted">Vui lòng điền đầy đủ thông tin chiến dịch.</p>
                        </div>
                        <div class="col-12 col-md-6 order-md-2 order-first">
                            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Thông tin chiến dịch</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- Input Sizing start -->
                <section id="input-sizing">
                    <div class="row match-height">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Cập nhật thông tin chiến dịch</h4>
                                </div>

                                <form action="" method="post">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-5">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <h6>Chiến dịch</h6>
                                                        <div class="form-group position-relative has-icon-right">
                                                            <input type="text" class="form-control"
                                                                placeholder="Chiến dịch">
                                                            <div class="form-control-icon">
                                                                <i class="fa fa-rocket"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <h6>Ngày bắt đầu</h6>
                                                        <div class="form-group position-relative">
                                                            <div class="form-group">
                                                                <input type="date" class="form-control">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <h6>Ngày kết thúc</h6>
                                                        <div class="form-group position-relative">
                                                            <div class="form-group">
                                                                <input type="date" class="form-control" value="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <h6>Người phụ trách</h6>
                                                        <fieldset class="form-group">
                                                            <select class="form-select">
                                                                <option>IT</option>
                                                                <option>Blade Runner</option>
                                                                <option>Thor Ragnarok</option>
                                                            </select>
                                                        </fieldset>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <h6>Thưởng</h6>
                                                        <div class="form-group position-relative has-icon-right">
                                                            <input type="text" class="form-control"
                                                                placeholder="Thưởng">
                                                            <div class="form-control-icon">
                                                                <i class="fa fa-money-bill-wave-alt"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-7">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <h6>Thành viên</h6>
                                                        <div class="card widget-todo">
                                                            <div class="card-body px-0 py-1" style="padding: 0;">
                                                                <ul class="widget-todo-list-wrapper"
                                                                    id="widget-todo-list">
                                                                    <li class="widget-todo-item mb-2">
                                                                        <div
                                                                            class="widget-todo-title-wrapper d-flex justify-content-between align-items-center mb-50">
                                                                            <div
                                                                                class="widget-todo-title-area d-flex align-items-center">
                                                                                <i data-feather="list"
                                                                                    class="cursor-move"></i>
                                                                                <div class="checkbox checkbox-shadow">
                                                                                    <input type="checkbox"
                                                                                        class="form-check-input"
                                                                                        id="checkbox1">
                                                                                    <label for="checkbox1"></label>
                                                                                </div>
                                                                                <span
                                                                                    class="widget-todo-title ml-50 mx-3">Phương
                                                                                    Công Thắng</span>
                                                                            </div>
                                                                            <div
                                                                                class="widget-todo-item-action d-flex align-items-center">
                                                                                <div class="avatar avatar-lg bg-warning">
                                                                                    <img src="/images/faces/1.jpg"
                                                                                        alt="" srcset="">
                                                                                </div>
                                                                                <i
                                                                                    class="bx bx-dots-vertical-rounded font-medium-3 cursor-pointer"></i>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                    <li class="widget-todo-item mb-2">
                                                                        <div
                                                                            class="widget-todo-title-wrapper d-flex justify-content-between align-items-center mb-50">
                                                                            <div
                                                                                class="widget-todo-title-area d-flex align-items-center">
                                                                                <i data-feather="list"
                                                                                    class="cursor-move"></i>
                                                                                <div class="checkbox checkbox-shadow">
                                                                                    <input type="checkbox"
                                                                                        class="form-check-input"
                                                                                        id="checkbox2">
                                                                                    <label for="checkbox2"></label>
                                                                                </div>
                                                                                <span
                                                                                    class="widget-todo-title ml-50 mx-3">Nguyễn
                                                                                    Thị Chinh</span>
                                                                            </div>
                                                                            <div
                                                                                class="widget-todo-item-action d-flex align-items-center">
                                                                                <div class="avatar avatar-lg bg-warning">
                                                                                    <img src="/images/faces/2.jpg"
                                                                                        alt="" srcset="">
                                                                                </div>
                                                                                <i
                                                                                    class="bx bx-dots-vertical-rounded font-medium-3 cursor-pointer"></i>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                    <li class="widget-todo-item mb-2">
                                                                        <div
                                                                            class="widget-todo-title-wrapper d-flex justify-content-between align-items-center mb-50">
                                                                            <div
                                                                                class="widget-todo-title-area d-flex align-items-center">
                                                                                <i data-feather="list"
                                                                                    class="cursor-move"></i>
                                                                                <div class="checkbox checkbox-shadow">
                                                                                    <input type="checkbox"
                                                                                        class="form-check-input"
                                                                                        id="checkbox4">
                                                                                    <label for="checkbox4"></label>
                                                                                </div>
                                                                                <span
                                                                                    class="widget-todo-title ml-50 mx-3">Hoàng
                                                                                    Thị
                                                                                    Thanh Loan</span>
                                                                            </div>
                                                                            <div
                                                                                class="widget-todo-item-action d-flex align-items-center">
                                                                                <div class="avatar avatar-lg bg-warning">
                                                                                    <img src="/images/faces/4.jpg"
                                                                                        alt="" srcset="">
                                                                                </div>
                                                                                <i
                                                                                    class="bx bx-dots-vertical-rounded font-medium-3 cursor-pointer"></i>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                    <li class="widget-todo-item mb-2">
                                                                        <div
                                                                            class="widget-todo-title-wrapper d-flex justify-content-between align-items-center mb-50">
                                                                            <div
                                                                                class="widget-todo-title-area d-flex align-items-center">
                                                                                <i data-feather="list"
                                                                                    class="cursor-move"></i>
                                                                                <div class="checkbox checkbox-shadow">
                                                                                    <input type="checkbox"
                                                                                        class="form-check-input"
                                                                                        id="checkbox5">
                                                                                    <label for="checkbox5"></label>
                                                                                </div>
                                                                                <span class="widget-todo-title ml-50 mx-3">Lê
                                                                                    Thị
                                                                                    Phương</span>
                                                                            </div>
                                                                            <div
                                                                                class="widget-todo-item-action d-flex align-items-center">
                                                                                <div class="avatar avatar-lg bg-warning">
                                                                                    <img src="/images/faces/5.jpg"
                                                                                        alt="" srcset="">
                                                                                </div>
                                                                                <i
                                                                                    class="bx bx-dots-vertical-rounded font-medium-3 cursor-pointer"></i>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                    <li class="widget-todo-item mb-2">
                                                                        <div
                                                                            class="widget-todo-title-wrapper d-flex justify-content-between align-items-center mb-50">
                                                                            <div
                                                                                class="widget-todo-title-area d-flex align-items-center">
                                                                                <i data-feather="list"
                                                                                    class="cursor-move"></i>
                                                                                <div class="checkbox checkbox-shadow">
                                                                                    <input type="checkbox"
                                                                                        class="form-check-input"
                                                                                        id="checkbox6">
                                                                                    <label for="checkbox6"></label>
                                                                                </div>
                                                                                <span
                                                                                    class="widget-todo-title ml-50 mx-3">Nguyễn
                                                                                    Đắc
                                                                                    Nhật Long</span>
                                                                            </div>
                                                                            <div
                                                                                class="widget-todo-item-action d-flex align-items-center">
                                                                                <div class="avatar avatar-lg bg-warning">
                                                                                    <img src="/images/faces/1.jpg"
                                                                                        alt="" srcset="">
                                                                                </div>
                                                                                <i
                                                                                    class="bx bx-dots-vertical-rounded font-medium-3 cursor-pointer"></i>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center mt-5">
                                            <button type="submit" class="btn btn-info">Cập nhật thông tin</button>
                                            <button class="btn btn-danger">Hủy</button>
                                        </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Input Sizing end -->

            </div>

            {{>footer}}
        </div>
    </div>
    {{>script}}
</body>

</html>